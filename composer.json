{
  "name": "toofab/schemas",
  "homepage": "https://schemas.toofab.com/",
  "description": "Schemas for all Toofab apps and components.",
  "type": "pbj-schema-store",
  "license": "Apache-2.0",
  "require": {
    "php": ">=7.1",
    "gdbots/schemas": "1.6.6",
    "triniti/schemas": "1.1.15"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.4",
    "gdbots/pbjc": "~0.4"
  },
  "autoload": {
    "files": [
      "build/php/src/pbj-schemas.php"
    ],
    "psr-0": {
      "": "build/php/src"
    }
  },
  "autoload-dev": {
    "files": [
      "pbj-schema-stores.php"
    ],
    "psr-0": {
      "": "build/php/tests"
    }
  },
  "scripts": {
    "pbjc": [
      "vendor/bin/pbjc",
      "git add .",
      "@test"
    ],
    "test": [
      "vendor/bin/phpunit",
      "npm test"
    ]
  }
}
